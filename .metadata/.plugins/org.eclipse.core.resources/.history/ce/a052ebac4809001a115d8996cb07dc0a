package mip;

import org.openqa.selenium.By;
import org.openqa.selenium.Dimension;
import org.openqa.selenium.Point;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.firefox.FirefoxDriver;

public class webelements {

	public static void main(String[] args) throws InterruptedException {

		System.setProperty("webdriver.gecko.driver", "/Users/bala/Desktop/Insurance/mip/mip_libraries/geckodriver");
		WebDriver driver = new FirefoxDriver();
		driver.get("https://www.google.com/");
		Thread.sleep(3000);
		
		WebElement ele = driver.findElement(By.xpath("//div[@id = 'SIvCob']"));
		
		// To get the text
		String or = ele.getText();
		System.out.println(or);
		
		// To get the css - font size
		String pr = ele.getCssValue("font-size");
		System.out.println(pr);
		
		// To get the Location
		Point qr = ele.getLocation();
		System.out.println(qr);
		
		// To get only the X-Location
		int rr = qr.x;
		System.out.println(rr);

		// To get only the Y-Location
		int sr = qr.y;
		System.out.println(sr);
		
		// To get the Size
		Dimension tr = ele.getSize();
		System.out.println("size of the emement : " + tr);
		
		// To get the Size
			int ur = ele.getSize().height;
			System.out.println("heoight of the emement : " + ur);
		// To get the Size
		int vr = ele.getSize().width;
		System.out.println("width of the emement : " + vr);
		
		Thread.sleep(3000);
		driver.close();
	}
}